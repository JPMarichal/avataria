{
	"root": true,
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended"
	],
	"rules": {
		"no-console": "warn",
		"no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"comma-dangle": ["error", "never"],
		"no-trailing-spaces": "error",
		"eol-last": ["error", "always"]
	},
	"globals": {
		"wp": "readonly",
		"jQuery": "readonly",
		"_": "readonly"
	}
}
